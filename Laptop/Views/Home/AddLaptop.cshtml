@model Laptop.ViewModel.LappyViewModel
@{
    ViewData["Title"] = "AddLaptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddLaptop</h1>

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="LaptopName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LaptopName" class="form-control" placeholder=" Laptop Name" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="NumberOfPorts" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NumberOfPorts" class="form-control" placeholder=" Number of Ports" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Processor" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Processor" class="form-control" placeholder="Processor" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="GraphicCard" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="GraphicCard" class="form-control" placeholder=" Graphic Card" />
        </div>
    </div>   
    <div class="form-group row">
        <label asp-for="RAM" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RAM" class="form-control" placeholder=" RAM" />
        </div>
    </div>

    

    <div class="form-group row">
        <label asp-for="Memory" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Memory" class="form-control" placeholder=" Memory" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Screen" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Screen" class="form-control" placeholder=" Screen" />
        </div>
    </div>  
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder=" Price" />
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
